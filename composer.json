{
    "name": "mariusasensi/meteocat",
    "description": "API client for Meteocat REST API",
    "keywords": ["meteocat", "meteo.cat", "weather", "provider", "catalunya"],
    "type": "library",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "~6.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "authors": [
        {
            "name": "Màrius Asensi Jordà",
            "email": "marius.asensi@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "Meteocat\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Meteocat\\Tests\\": "tests/" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-dox": "vendor/bin/phpunit --testdox"
    },
    "minimum-stability": "dev"
}
